<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<BorderPane prefHeight="850.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.librarysystem.Controller.SearchUserController">
   <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="userNameInput" onMouseClicked="#mouseClickName" prefHeight="50.0" prefWidth="285.0" promptText="Name" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                     <font>
                        <Font name="DejaVuMathTeXGyre-Regular" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
                  <JFXButton fx:id="nameSearchBtn" onAction="#searchUserfromName" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #00c0b1; -fx-border-color: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Search" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="nicInput" onMouseClicked="#mouseClickNIC" prefHeight="50.0" prefWidth="285.0" promptText="NIC" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                     <font>
                        <Font name="DejaVuMathTeXGyre-Regular" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
                  <JFXButton fx:id="nicSearchBtn" onAction="#searchUserFromNIC" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #00c0b1; -fx-border-color: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Search" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="contactNoInput" onMouseClicked="#mouseClickContact" prefHeight="50.0" prefWidth="285.0" promptText="Contact Number" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                     <font>
                        <Font name="DejaVuMathTeXGyre-Regular" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
                  <JFXButton fx:id="contactNoSearchBtn1" onAction="#searchUserFromContactNo" prefHeight="50.0" prefWidth="100.0" style="-fx-background-color: #00c0b1; -fx-border-color: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Search" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#00c0b1" strokeType="OUTSIDE" strokeWidth="0.0" text="Search User">
               <font>
                  <Font name="DejaVu Sans Condensed Bold" size="45.0" />
               </font>
               <HBox.margin>
                  <Insets top="20.0" />
               </HBox.margin>
            </Text>
         </children>
      </HBox>
   </top>
   <bottom>
      <TextArea fx:id="outPutTextArea" editable="false" style="-fx-background-radius: 20; -fx-border-radius: 20;" BorderPane.alignment="CENTER">
         <font>
            <Font name="Segoe UI" size="20.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="30.0" left="30.0" right="30.0" />
         </BorderPane.margin>
      </TextArea>
   </bottom>
</BorderPane>
