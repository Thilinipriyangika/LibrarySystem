<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane fx:id="backGround" prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.librarysystem.Controller.OverdueDateUserController">
   <center>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="inputDate" prefHeight="40.0" prefWidth="300.0" promptText="Date" style="-fx-background-radius: 20; -fx-border-radius: 20;">
                     <font>
                        <Font name="DejaVuMathTeXGyre-Regular" size="20.0" />
                     </font>
                     <HBox.margin>
                        <Insets right="20.0" />
                     </HBox.margin>
                  </TextField>
                  <JFXButton fx:id="getDetailsButton" onAction="#getOverdueDateUsers" prefHeight="40.0" prefWidth="150.0" style="-fx-background-color: #00c0b1; -fx-border-color: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Get Deatails" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
            <HBox alignment="CENTER">
               <children>
                  <TextArea fx:id="detailsTextArea" editable="false" prefHeight="223.0" prefWidth="539.0">
                     <font>
                        <Font name="Segoe UI" size="20.0" />
                     </font>
                  </TextArea>
               </children>
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="150.0" prefWidth="200.0">
               <children>
                  <TextArea fx:id="typeEmail" prefHeight="73.0" prefWidth="539.0" promptText="Type Email">
                     <font>
                        <Font name="Segoe UI" size="20.0" />
                     </font>
                  </TextArea>
               </children>
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <JFXButton fx:id="sendEmailButton" onAction="#sendEmail" prefHeight="50.0" prefWidth="150.0" style="-fx-background-color: #00c0b1; -fx-border-color: white; -fx-background-radius: 20; -fx-border-radius: 20;" text="Send Email" textFill="WHITE">
                     <font>
                        <Font size="17.0" />
                     </font>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
   <top>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <Text fill="#00c0b1" strokeType="OUTSIDE" strokeWidth="0.0" text="Find Overdue Date User">
               <font>
                  <Font name="DejaVu Sans Condensed Bold" size="45.0" />
               </font>
            </Text>
         </children>
      </HBox>
   </top>
</BorderPane>
